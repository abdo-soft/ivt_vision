@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}


<main id="main">

    <section id="about" class="about">
        <div class="container">
            <div class="section-title" data-aos="fade-in" data-aos-delay="100">
                <h2>About Us</h2>
            </div>
            <div class="row no-gutters">
                <div class="content col-xl-5 d-flex align-items-stretch" data-aos="fade-up">
                    <div class="content">
                        <h3>Insight Vision Technologies Consulting</h3>
                        <p>
                            Insight Vision Technologies is a global firm headquartered in Dubai, UAE. We focus on - People and Technology. We are a digital consultancy that specializes in business, sales, and marketing.

                            Whether you’re looking for consulting services, digital marketing services, or an outsourced sales and marketing department, we have the expertise needed to put your organization on the path to growth.

                            At Insight Vision Technologies Consulting, we focus on building long-term relationships with our customers. As our customer, you have a local team that works alongside your team to help you keep your business on track.
                        </p>
                        <a href="#" class="about-btn">About us <i class="bx bx-chevron-right"></i></a>
                    </div>
                </div>
                <div class="col-xl-7 d-flex align-items-stretch">
                    <div class="icon-boxes d-flex flex-column justify-content-center">
                        <div class="row">
                            <div>

                                <img src="~/assets/img/about.png" class="testimonial-img" alt="">

                            </div>

                        </div>
                    </div><!-- End .content-->
                </div>
            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container">

            <div class="section-title" data-aos="fade-in" data-aos-delay="100">
                <h2>Categories</h2>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0">
                    <div class="icon-box" data-aos="fade-up">
                        <div class="icon"><i class="bx bxl-dribbble"></i></div>
                        <h4 class="title"><a href="">Lorem Ipsum</a></h4>
                        <p class="description">Voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi</p>
                    </div>
                </div>



            </div>

        </div>
    </section><!-- End Services Section -->
    <!-- ======= Products Section ======= -->
    <div class="content">

        <div class="site-section bg-left-half mb-5">
            <div class="container owl-2-style">

                <h2 class="text-primary py-5 ">Our Services</h2>

                @foreach (var catItem in Model.category)
                {
                    <div class="owl-carousel owl-2">

                        <div class="media-29101">


                            <a href="#"><img src="~/assets/img/@catItem.ImageUrl" alt="Image" class="img-fluid"></a>
                            <h3><a href="#">@catItem.Cname</a></h3>
                            
                        </div>
                    </div>
                }
                </div>
        </div>

    </div>



    <script src="~/assets/slide/js/jquery-3.3.1.min.js"></script>
    <script src="~/assets/slide/js/popper.min.js"></script>
    <script src="~/assets/slide/js/bootstrap.min.js"></script>
    <script src="~/assets/slide/js/owl.carousel.min.js"></script>
    <script src="~/assets/slide/js/main.js"></script>








    <!-- End Products Section -->
    <!-- ======= Qoutation Section ======= -->
    <section id="contact" class="contact section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Create Your Qoutation</h2>
            </div>


            <div class="row">
                <div class="col-lg-12">
                    <form action="#" method="post" role="form" class="php-email-form">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" required>
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" required>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" required>
                        </div>
                        <div class="form-group mt-3">
                            <textarea class="form-control" name="message" rows="5" placeholder="Message" required></textarea>
                        </div>
                        <div class="my-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>
                        </div>
                        <div class="text-center"><button type="submit">Send Message</button></div>
                    </form>
                </div>
            </div>

        </div>
    </section><!-- End Qoutation Section -->

</main><!-- End #main -->

