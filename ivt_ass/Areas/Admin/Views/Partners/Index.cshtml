@model IEnumerable<Core.Entities.Partners>

@{
    ViewData["Title"] = "Index";
}
<div style="margin-left:160px">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.categoryName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoryName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table></div>
